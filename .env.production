# Production environment configuration for Marib Services API

# IMPORTANT: Update the placeholder values before deploying. Secrets should
# never be committed to source control.

APP_NAME="Marib Services"
APP_ENV=production
APP_KEY=base64:REPLACE_WITH_SERVER_SECRET
APP_DEBUG=false
APP_URL=https://api.example.com
APP_CURRENCY=YER

LOG_CHANNEL=stack
LOG_LEVEL=error

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
CACHE_PREFIX=marib_services_cache_
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

DB_CONNECTION=mysql
DB_HOST=10.0.0.10
DB_PORT=3306
DB_DATABASE=marib_services
DB_USERNAME=marib_services
DB_PASSWORD=PLEASE_SET_DB_PASSWORD

REDIS_CLIENT=phpredis
REDIS_CLUSTER=redis
REDIS_HOST=redis.internal
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=PLEASE_SET_REDIS_PASSWORD

REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_PREFIX=marib_services_

MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=PLEASE_SET_SMTP_USERNAME
MAIL_PASSWORD=PLEASE_SET_SMTP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=notifications@example.com
MAIL_FROM_NAME="${APP_NAME}"
